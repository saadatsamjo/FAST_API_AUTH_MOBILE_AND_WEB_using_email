# .env

# ====================================
# ENVIRONMENT MODE (Controls everything!)
# ====================================
DEV_MODE=True
# Set to False for production

# ====================================
# 1. GENERAL SETTINGS
# ====================================
APP_NAME="My FastAPI App Project"
BASE_URL="http://localhost:8000"
FRONTEND_URL="http://localhost:3000"
DEBUG=True

# ====================================
# 2. DATABASE SETTINGS
# ====================================
DB_USER="myprojectdbuser"
DB_PASSWORD="myprojectdbpassword"
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="myprojectdb"

# ====================================
# 3. JWT SETTINGS
# ====================================
SECRET_KEY=""
ALGORITHM="HS256"
# ACCESS_TOKEN_EXPIRY=10080  # Minutes (7 days for dev, 15 for prod recommended)
# REFRESH_TOKEN_EXPIRY=180   # Days (6 months for dev, 30 for prod recommended)
ACCESS_TOKEN_EXPIRY=15  # Minutes 
REFRESH_TOKEN_EXPIRY=1   # Days

# ====================================
# 4. COOKIE SETTINGS
# ====================================
# These will be auto-overridden by DEV_MODE in production
# Just leave the defaults for development
COOKIE_DOMAIN=
COOKIE_SECURE=False
COOKIE_SAMESITE=lax
ACCESS_TOKEN_COOKIE_NAME=access_token
REFRESH_TOKEN_COOKIE_NAME=refresh_token

# ====================================
# 5. EMAIL SETTINGS
# ====================================
RESEND_API_KEY=""


# ====================================
# PRODUCTION EXAMPLE (Just change DEV_MODE and update values)
# ====================================
# DEV_MODE=False
# APP_NAME="My FastAPI App Project"
# BASE_URL="https://api.yourdomain.com"
# FRONTEND_URL="https://yourdomain.com"
# DEBUG=False
# DB_USER="prod_user"
# DB_PASSWORD="super_secure_password"
# DB_HOST="your-db-host.com"
# DB_PORT="5432"
# DB_NAME="production_db"
# SECRET_KEY="super_long_random_production_key"
# ACCESS_TOKEN_EXPIRY=15
# REFRESH_TOKEN_EXPIRY=30
# RESEND_API_KEY="your_production_api_key"
# 
# Cookie settings will auto-adjust in production when DEV_MODE=False
# COOKIE_DOMAIN=
# COOKIE_SECURE=False
# COOKIE_SAMESITE=lax
# ACCESS_TOKEN_COOKIE_NAME=access_token
# REFRESH_TOKEN_COOKIE_NAME=refresh_token